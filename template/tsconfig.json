{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@projectConstants/*": ["projectConstants/*"]
    }
  },
  "typedocOptions": {
    "inputFiles": ["./src"],
    "theme": "node_modules/typedoc-neo-theme/bin/default",
    "mode": "file",
    "out": "docs",
    "ignoreCompilerErrors": true,
    "exclude": [
      "**/src/test/*",
      "**/*.test.ts",
      "**/__tests__/*",
      "**/__mocks__/*"
    ],
    "excludeNotExported": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
